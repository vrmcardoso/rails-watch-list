<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1627133805103-ce2d34ccdd37?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80);">
  <div class="container">
    <h1><strong>Create your movie lists</strong></h1>
  </div>
</div>
<div class="container-list-main">
  <h1 class="m-2">List of your movie lists</h1>
  <%= link_to new_list_path do %>
    <button class="btn btn-success m-2">Create new List</button>
  <% end %>
</div>
<div class="card-container">
  <% @lists.each do |list| %>
  <% if list.photo.attached? %>
    <div class="card-category m-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path list.photo.key %>)">
      <a href=<%= "#{list_path(list)}" %> class="link"><%= list.name %></a>
    </div>
    <% else %>
     <div class="card-category m-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_path "vasco.jpg" %>)">
      <a href=<%= "#{list_path(list)}" %> class="link"><%= list.name %></a>
    </div>
    <% end %>
  <% end %>
</div>
