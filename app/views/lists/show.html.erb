<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to "#", class: "navbar-brand" do %>
      <%= image_tag "https://cdn-icons-png.flaticon.com/512/705/705062.png" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
          <li class="nav-item active">
            <%= link_to "Home", lists_path, class: "nav-link" %>
          </li>
          <li>
            <%= link_to "Add movie", new_list_bookmark_path(@list), class: "nav-link" %>
          </li>
          <li>
            <%= link_to "delete", list_path(@list), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "nav-link" %>
          </li>
      </ul>
    </div>
  </div>
</div>

<div>
  <% if @list.photo.attached? %>
    <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path @list.photo.key %>);">
      <div class="container">
        <h1><strong><%= @list.name %></strong></h1>
      </div>
    </div>
  <% else %>
    <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path "vasco.jpg" %>);">
      <div class="container">
        <h1><strong><%= @list.name %></strong></h1>
      </div>
    </div
  <% end %>
</div>

<div class="card-container">
  <% @bookmarks.each do |bookmark| %>
  <div class="card-product">
    <%= image_tag bookmark.movie.poster_url %>
    <div class="card-product-infos">
      <h2><%= bookmark.movie.title %></h2>
      <p><strong>rating: <%= bookmark.movie.rating %>⭐️</strong></p>
      <p><%= bookmark.movie.overview %></p>
      <%= link_to "delete", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
    </div>
  </div>
  <% end %>
</div>
